@using Sandbox;
@using Sandbox.UI;
@using System.Linq;
@using System.Threading.Tasks;
@using Sandbox.Menu;

@inherits RootPanel
@implements ILoadingScreenPanel
@attribute [StyleSheet]

<root>
    @(Progress.Title ?? "Loading...")
</root>

@code
{
    public LoadingProgress Progress;

    public void OnLoadingProgress(LoadingProgress progress)
    {
        Progress = progress;
        StateHasChanged();
    }
}